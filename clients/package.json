{
  "private": true,
  "name": "polar",
  "scripts": {
    "build": "dotenvx run -- turbo run build --filter=!astro-example",
    "dev": "dotenvx run -- turbo run dev",
    "dev-web": "dotenvx run -- turbo run dev --filter=web",
    "lint": "dotenvx run -- turbo run lint",
    "test": "dotenvx run -- turbo run test",
    "storybook": "dotenvx run -- turbo run build --filter=@polar-sh/sdk && cd apps/web && pnpm storybook",
    "generate": "cd packages/sdk && pnpm generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "manypkg check"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.14.1",
    "@manypkg/cli": "^0.21.4",
    "eslint": "^8.55.0",
    "eslint-config-custom": "workspace:*",
    "only-allow": "1.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^2.1.1"
  },
  "resolutions": {
    "sharp": "0.33.3"
  },
  "packageManager": "pnpm@9.2.0",
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
